@inherits EditableDocketCardBase

@foreach (var item in Dockets)
{
    <div class="col-lg-3 mb-2 mx-2">
        <MudCard Style="min-width: 325px;" Elevation="3">
            <MudCardHeader>
                <CardHeaderContent>
                    <MudText Typo="Typo.h6">@item.Title</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">@item.Body</MudText>
                </MudCardContent>
                <MudCardActions Class="d-flex justify-center pb-3 pe-5">
                    <MudButton Variant="Variant.Text" Color="Color.Primary">View</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Edit</MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary">Delete</MudButton>
                    @* <MudText Style="font-size: 12px">@item.DateCreated.ToString("MM-dd-yyyy")</MudText> *@
                </MudCardActions>
            </MudCard>
        </div>
}