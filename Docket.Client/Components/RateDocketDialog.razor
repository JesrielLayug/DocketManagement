@inherits RateDocketDialogBase

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Rate Dockets
        </MudText>
    </TitleContent>
    <DialogContent>
        @if(Rating == null)
        {
            <MudRating SelectedValue="0" Class="mt-3" />
        }
        else
        {
            <MudRating @bind-SelectedValue="Rating.Rate" Class="mt-3" />
        }

    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit" Class="px-10">Submit</MudButton>
    </DialogActions>
</MudDialog>
