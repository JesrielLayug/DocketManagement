@page "/"
@using Docket.Shared;
@inherits PublicBase
@attribute [AllowAnonymous]


@if (isLoading)
{
    <Loader />
}
else
{
    @if (Dockets == null || Dockets.Count() == 0 )
    {
        <MudContainer Class="d-flex flex-column align-center pa-0 ma-0">
            <MudImage Src="/Image/No-Item.png" Width="450" Height="450" ObjectFit="ObjectFit.Cover" Elevation="0" Class="rounded" />
            <MudText Typo="Typo.h4" Align="Align.Center"><strong>NO DOCKETS</strong></MudText>
            <MudText Typo="Typo.subtitle2">Unfortunately, there's no Dockets at the public zone yet.</MudText>
        </MudContainer>
    }
    else
    {
        <div class="row d-flex px-2 docket-header">
            <MudText Typo="Typo.h4" GutterBottom="true" Class="ml-1" Style="font-weight: 600">Public Dockets</MudText>

        </div>

        @if (Dockets.Count() > 0)
        {
            const int itemsPerRow = 4;
            var docketsRowList = new List<DTODocket>();

            for (int i = 0; i < Dockets.Count(); i++)
            {
                docketsRowList = Dockets.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();

                <div class="row mt-3 d-flex flex-wrap docketcard-container">
                    <DocketCard Dockets="@docketsRowList" />
                </div>
            }
        }
    }
}



